<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter your characters name:"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="What are the possible races you would like them to be?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1C1818"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/checkBox"
            app:layout_constraintStart_toStartOf="@+id/Name"
            app:layout_constraintTop_toBottomOf="@+id/Name"
            tools:visibility="visible" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Human"
            app:layout_constraintBottom_toTopOf="@+id/checkBox2"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Elf"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Dwarf"
            app:layout_constraintStart_toEndOf="@+id/checkBox2"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Gnome"
            app:layout_constraintStart_toEndOf="@+id/checkBox3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Orc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Lizardfolk"
            app:layout_constraintStart_toEndOf="@+id/checkBox5"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="306dp"
            android:layout_height="53dp"
            android:fontFamily="serif"
            android:text="What possible classes will they have?"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox6" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Warrior"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Wizard"
            app:layout_constraintStart_toEndOf="@+id/checkBox7"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Rogue"
            app:layout_constraintStart_toEndOf="@+id/checkBox8"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Hunter"
            app:layout_constraintStart_toEndOf="@+id/checkBox9"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="365dp"
            android:layout_height="55dp"
            android:fontFamily="serif"
            android:text="What kind of background does your character come from?"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox8" />

        <CheckBox
            android:id="@+id/checkBox11"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Noble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <CheckBox
            android:id="@+id/checkBox12"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Outcast"
            app:layout_constraintStart_toEndOf="@+id/checkBox11"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <CheckBox
            android:id="@+id/checkBox13"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Orphan"
            app:layout_constraintStart_toEndOf="@+id/checkBox12"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <CheckBox
            android:id="@+id/checkBox14"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Merchant"
            app:layout_constraintStart_toEndOf="@+id/checkBox13"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="80dp"
            android:text="Submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox12"
            android:onClick="onSendUsersInfo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>